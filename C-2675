#include <stdio.h>
#include <string.h>

int main(void){
	int T, i, j, k;
	scanf("%d", &T);
	for(i =0; i<T; i++) {
		int R;
		scanf("%d",&R);
		char S[30];
		scanf("%s", S);
		for(j =0; j<strlen(S); j++) {
			for(k=0;k<R;k++) printf("%c", S[j]);
		}
		printf("\n"); //개행이없다고 틀릴줄이야.. 
	}	
	return 0;
}
