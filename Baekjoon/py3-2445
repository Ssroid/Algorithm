import sys

read = sys.stdin.readline
N = int(read())

for i in range(N):
    i += 1
    for j in range(i):
        print('*', end="")
    for j in range((N-i)*2):
        print(' ', end="")
    for j in range(i):
        print('*', end="")
    print("")
for i in range(N):
    i += 1
    for j in range(N-i):
        print('*', end="")
    for j in range(2*i):
        print(' ', end="")
    for j in range(N-i):
        print('*', end="")
    print("")
        
        
